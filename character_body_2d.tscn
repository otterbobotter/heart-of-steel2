script/source = "extends CharacterBody2D

const SPEED = 500.0
const JUMP_VELOCITY = -700.0
const MASS = 1.5
const DASH_SPEED = 1000
const DASH_DURATION = 0.2
const WALL_SLIDE_SPEED = 150.0
const WALL_JUMP_FORCE_X = 600.0
const WALL_JUMP_FORCE_Y = -700.0

var has_dash = false
var has_double_jump = false
var has_wall_jump = false

var is_wall_sliding = false
var is_dashing = false
var dash_timer = 0.0

var max_jumps = 1
var jumps = 0

var health = 100

@onready var dash_effect = $dash_effect
@onready var wall_slide_effect = $wall_slide_effect

func _physics_process(delta: float) -> void:
	player_controller(delta)
	move_and_slide()

func apply_gravity(delta):
	if not is_on_floor() and not is_dashing:
		velocity += get_gravity() * MASS * delta

func handle_jump():
	if is_on_floor():
		jumps = max_jumps

	if has_wall_jump and is_wall_sliding and Input.is_action_just_pressed(\"ui_accept\"):
		var wall_dir = get_wall_normal().x
		velocity.y = WALL_JUMP_FORCE_Y
		velocity.x = wall_dir * WALL_JUMP_FORCE_X
		is_wall_sliding = false
		return

	if Input.is_action_just_pressed(\"ui_accept\") and jumps > 0:
		velocity.y = JUMP_VELOCITY
		jumps -= 1

func handle_wall_slide(direction):
	if not has_wall_jump or is_dashing:
		is_wall_sliding = false
		wall_slide_effect.emitting = false
		return

	if is_on_floor():
		is_wall_sliding = false
		wall_slide_effect.emitting = false
		return

	if is_on_wall() and velocity.y > 0 and direction != 0:
		is_wall_sliding = true
		velocity.y = min(velocity.y, WALL_SLIDE_SPEED)
		velocity.x += JUMP_VELOCITY
	else:
		is_wall_sliding = false

	if is_wall_sliding:
		var wall_dir = -get_wall_normal().x
		wall_slide_effect.direction = Vector2(wall_dir * 200, 0)
	wall_slide_effect.emitting = is_wall_sliding

func handle_dash(direction, delta):
	if not has_dash:
		return

	if is_dashing:
		dash_effect.emitting = true
		dash_timer -= delta
		if dash_timer <= 0:
			is_dashing = false
			dash_effect.emitting = false

	if Input.is_action_just_pressed(\"dash_key\") and not is_dashing:
		is_dashing = true
		dash_timer = DASH_DURATION
		velocity.x = direction * DASH_SPEED
		velocity.y = 0
		print(\"dash button clicked\")
		
func Horizontal_movement(direction):
	if is_dashing:
		return

	if direction:
		velocity.x = direction * SPEED
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)

func player_controller(delta):
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	handle_dash(direction, delta)
	apply_gravity(delta)
	handle_wall_slide(direction)
	handle_jump()
	Horizontal_movement(direction)

func unlock_ability(ability_name: String):
	match ability_name:
		\"dash\":
			has_dash = true
			print(\"unlocked dash\")
		\"double_jump\":
			has_double_jump = true
			max_jumps = 2
			print(\"unlocked double jump\")
		\"wall_jump\":
			has_wall_jump = true
			print(\"wall jump unlocked\")
"

