script/source = "# player.gd - Refactored player controller
extends CharacterBody2D

# Constants
const SPEED = 500.0
const JUMP_VELOCITY = -700.0
const MASS = 1.5
const DASH_SPEED = 1000
const DASH_DURATION = 0.2
const WALL_SLIDE_SPEED = 150.0
const WALL_JUMP_FORCE_X = 600.0
const WALL_JUMP_FORCE_Y = -700.0

# Abilities
var has_dash = false
var has_double_jump = false
var has_wall_jump = false

# Jump tracking
var max_jumps = 1
var jumps = 0

# Dash tracking
var is_dashing = false
var dash_timer = 0.0

# Stats
var health = 100

# Effects
@onready var dash_effect = $dash_effect
@onready var wall_slide_effect = $wall_slide_effect
@onready var state_machine = $StateMachine

func _ready() -> void:
	# Pass player reference to state machine
	for state in state_machine.get_children():
		if state is State:
			state.player = self

func _physics_process(delta: float) -> void:
	move_and_slide()

func get_input_direction() -> float:
	return Input.get_axis(\"ui_left\", \"ui_right\")

func apply_gravity(delta: float) -> void:
	if not is_on_floor() and not is_dashing:
		velocity += get_gravity() * MASS * delta

func reset_jumps() -> void:
	if is_on_floor():
		jumps = max_jumps

func unlock_ability(ability_name: String) -> void:
	match ability_name:
		\"dash\":
			has_dash = true
			print(\"unlocked dash\")
		\"double_jump\":
			has_double_jump = true
			max_jumps = 2
			print(\"unlocked double jump\")
		\"wall_jump\":
			has_wall_jump = true
			print(\"wall jump unlocked\")
"

